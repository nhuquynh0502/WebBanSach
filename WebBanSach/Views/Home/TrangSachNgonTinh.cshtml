
@model List<WebBanSach.Book>
@{
    ViewBag.Title = "TrangSachNgonTinh";
}

@*<h2>TrangSachNgonTinh</h2>*@

<div class="container" role="alert">
    <form action="/Home/TrangQuanLySach" method="post" style="width: 100%">
        <div class="form-group form-row mt-4">
            <b><label class="col">Tìm kiếm</label></b>
            <input type="text" value="@ViewBag.value" class="form-control col" placeholder="Tìm kiếm" name="chuoi" />
        </div>
    </form>

    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-4 mb-5">
                <div class="book-image">
                    <img src="@book.Images" alt="" width=300px height=350px />
                </div>
                <div class="book-name mt-3">
                    <h5>@book.Name</h5>
                </div>
                <div class="book-author">
                    Tác giả:
                    @book.Author
                </div>
                <div class="book-releasedate">
                    Ngày phát hành:
                    @book.Release_Date.Value.ToShortDateString()
                </div>
                <div class="book-amount">
                    Số lượng:
                    @book.Amount
                </div>
                <div class="book-discription">
                    Mô tả:
                    @book.Discription
                </div>
                <div class="book-agelimit">
                    Tuổi giới hạn:
                    @book.Age_Limit
                </div>
                <div class="book-price">
                    Giá:
                    @book.Price
                    nghìn
                </div>
            </div>
        }
    </div>
</div>